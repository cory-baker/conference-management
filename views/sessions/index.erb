<h1 class="mb-4">Sessions</h1>

<a href="/sessions/new" class="btn btn-primary mb-3">Create New Session</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Conference ID</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session['id'] %></td>
        <td><%= session['title'] %></td>
        <td><%= session['conference_id'] %></td>

        <!-- Format and display start time -->
        <td>
          <%= Time.parse(session['start_time'].to_s).strftime("%Y-%m-%d") %><br>
          <%= Time.parse(session['start_time'].to_s).strftime("%I:%M %p") %>
        </td>

        <!-- Format and display end time -->
        <td>
          <%= Time.parse(session['end_time'].to_s).strftime("%Y-%m-%d") %><br>
          <%= Time.parse(session['end_time'].to_s).strftime("%I:%M %p") %>
        </td>

        <td><%= session['description'] %></td>

        <td>
          <a href="/sessions/<%= session['id'] %>" class="btn btn-info btn-sm">View</a>
          <a href="/sessions/<%= session['id'] %>" class="btn btn-warning btn-sm">Edit</a>
          <form action="/sessions/<%= session['id'] %>" method="POST" style="display:inline;">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
